<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Este es un textview">
            </TextView>

            <TextView
                android:id="@+id/textViewSubtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Este es un segundo textview"
                android:textColor="#ABCDEF"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:fontFamily="sans-serif"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/textViewSubtitulo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Margins"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:background="#ABCDEF"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/tvTitulo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Este es un textview">
            </TextView>

            <TextView
                android:id="@+id/textViewSubtitul2o"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Este es un segundo textview"
                android:textColor="#ABCDEF"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:fontFamily="sans-serif"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/textViewSubtitulo22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Margins"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:background="#ABCDEF"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/textViewSubtitulo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paddings"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:background="#F00"
                android:paddingTop="20dp"
                android:paddingBottom="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gravity"
                android:textSize="20sp"
                android:gravity="right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layout Gravity"
                android:textSize="20sp"
                android:layout_gravity="right"/>

            <ImageView
                android:id="@+id/imagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:id="@+id/imagen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_round"/>
            <ImageView
                android:id="@+id/image2n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:id="@+id/ima3gen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_round"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese nombre"
                android:inputType="textCapWords"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Femenino"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masculino"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Femenino"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masculino"/>
            </RadioGroup>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Dev"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iOS Dev"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Dev"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iOS Dev"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi boton"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>